<?xml version="1.0" encoding="utf-8"?>
   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rv_touzhu_bottom"
        style="@style/bottom"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <Button
            android:id="@+id/clear_pick"
            style="@style/bet_bottom_btn"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="清空选号" />
         <ImageView
            android:id="@+id/footer_left_divider"
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:layout_toRightOf="@+id/clear_pick"
            android:contentDescription="@null" />
<ImageView
            android:id="@+id/footer_left_divider"
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@android:color/white"
            android:layout_toLeftOf="@+id/addToList"
            android:contentDescription="@null" />
        <Button
            android:id="@+id/addToList"
            style="@style/bet_bottom_btn"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:text="选好了" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/addToList"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="共" />

            <TextView
                android:id="@+id/bet_zhushu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20.0dip"
                android:textColor="@color/white"
                android:text="注" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/footer_blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/footer_blue" 
                android:text="元" />
        </LinearLayout>

    </RelativeLayout>