<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg_selector"
    android:orientation="horizontal" >
  <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="6dp"
        android:orientation="vertical" >
    <TextView
        android:id="@+id/tv_lottery_qi_num"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="20131231期"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />
    <ImageView 
        android:id="@+id/iv_lottery_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
    <View
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/table_spacing_line" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_lottery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11-07 09:12:51"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_lottery_money"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="￥ 1.00"
           android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认购金额"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_lottery_buytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复式合买"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_lottery_awardstatus"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:text="未中奖"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_lottery_procedurestatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已出票"
            android:layout_gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
    </LinearLayout>
   <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_vertical"
       android:background="@drawable/list_arrow"
       android:contentDescription="@null"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       
       />
</LinearLayout>