<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rv_touzhu_item"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/pick_item_selector"
		>

	<View android:layout_width="match_parent"
	      android:layout_height="0.5dp"
	      android:background="@color/divider_dark"
	      android:layout_alignBottom="@+id/content"/>

	<ImageView
			android:id="@+id/pick_delete"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/pick_delete_btn"
			android:layout_marginLeft="15dp"
			android:layout_centerVertical="true"/>

	<RelativeLayout
			android:id="@+id/content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/pick_delete"
			android:layout_marginLeft="20dp"
			android:layout_marginStart="20dp">

		<TextView
				android:id = "@+id/tv_pls_item"
				android:layout_width="280dp"
				android:layout_height="wrap_content"
				android:textColor="@color/buyer_red"
				android:textSize="18sp"
				android:paddingTop="10dp"
				android:text="1 4 12"
				/>
		<TextView
				android:id="@+id/tv_pls_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/darker_gray"
				android:layout_below= "@+id/tv_pls_item"
				android:paddingTop="4dp"
				android:paddingBottom="10dp"
				android:text="[直选]"
				/>
	</RelativeLayout>

	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="20dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:paddingRight="10dp"
			android:contentDescription="@null"
			android:src="@drawable/list_arrow" />

</RelativeLayout>