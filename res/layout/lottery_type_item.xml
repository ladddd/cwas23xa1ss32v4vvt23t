<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/chart_white"
              android:orientation="vertical">
	<View
			android:id="@+id/first_diveider"
			android:layout_width="match_parent"
			android:layout_height="4dp"
			android:background="@color/timer_bg"
			android:visibility="gone"/>

	<RelativeLayout android:layout_width="match_parent"
	                android:layout_height="wrap_content">
		<ImageView
				android:id="@+id/iv_lottery_type"
				android:layout_height="70dp"
				android:layout_width="70dp"
				android:scaleType="fitCenter"
				android:layout_centerVertical="true"
				android:layout_marginRight="10dp"
				android:layout_marginEnd="10dp"
				android:layout_marginLeft="5dp"
				android:layout_marginStart="5dp"
				android:layout_marginTop="2dp"
				android:layout_marginBottom="2dp"
				android:contentDescription="@null" />

		<TextView
				android:id="@+id/tv_lottery_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_toRightOf="@+id/iv_lottery_type"
				android:layout_marginTop="10dp"
				android:singleLine="true"
				android:textColor="@android:color/black"
				android:textAppearance="?android:textAppearanceMedium" />
		<TextView
				android:id="@+id/tv_description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/iv_lottery_type"
				android:layout_alignParentBottom="true"
				android:singleLine="true"
				android:paddingBottom="6dp"
				android:textColor="@android:color/darker_gray"
				android:textAppearance="?android:textAppearanceSmall" />
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="20dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:paddingRight="10dp"
				android:contentDescription="@null"
				android:src="@drawable/list_arrow" />
	</RelativeLayout>

	<View
			android:id="@+id/last_diveider"
			android:layout_width="match_parent"
			android:layout_height="4dp"
			android:background="@color/timer_bg"
			android:visibility="gone"/>

</LinearLayout>