<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal" >
	<TextView
			android:id="@+id/bet_zhu_tv"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="2.0"
			android:gravity="center"
			android:text="序号"
			android:textColor="#ffa5998b"
			android:textSize="14.0sp" />

	<TextView
			android:id="@+id/plan_period_tv"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="2.0"
			android:gravity="center"
			android:text="01"
			android:textColor="#ffa5998b"
			android:textSize="14.0sp" />

	<LinearLayout
			android:id="@+id/bet_time_view"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="7.0"
			android:focusable="true"
			android:gravity="center"
			android:paddingBottom="4.0dip"
			android:paddingTop="4.0dip" >

		<ImageView
				android:id="@+id/tv_sub"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/smartfollow_sub"
				android:textColor="@color/tc_default" />

		<EditText
				android:id="@+id/bet_time_tv"
				android:layout_width="0.0dip"
				android:layout_height="25dp"
				android:layout_weight="1.0"
				android:background="@drawable/smartfollow_edit_bg"
				android:ellipsize="middle"
				android:gravity="center"
				android:hint="@string/one"
				android:inputType="numberDecimal"
				android:digits="0123456789"
				android:textColor="@color/tc_default"
				android:textColorHint="#ffcccccc"
				android:textSize="14.0sp"
				android:selectAllOnFocus="true"/>

		<ImageView
				android:id="@+id/tv_add"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:src="@drawable/smartfollow_add"
				android:textColor="@color/tc_default" />
	</LinearLayout>

	<TextView
			android:id="@+id/total_count"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="4.0"
			android:gravity="center"
			android:padding="2.0dip"
			android:text="累计投入"
			android:textColor="#ff000000"
			android:textSize="14.0sp" />

	<TextView
			android:id="@+id/profit_count"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="4.0"
			android:gravity="center"
			android:padding="2.0dip"
			android:text="中奖盈利"
			android:textColor="@color/black"
			android:textSize="14.0sp" />


	<TextView
			android:id="@+id/profit_precent"
			android:layout_width="0.0dip"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="4.0"
			android:gravity="center"
			android:padding="2.0dip"
			android:text="盈利率"
			android:textColor="@color/black"
			android:textSize="14.0sp" />

</LinearLayout>