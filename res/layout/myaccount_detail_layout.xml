        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/myaccount_detail"
            style="@style/btn_keep_pick"
            android:layout_marginLeft="4dp"
            android:background="@drawable/lottery_record_btn_selector"
            android:button="@null"
            android:checked="true"
            android:text="明细" />

        <RadioButton
            android:id="@+id/myaccount_chongzhi"
            style="@style/btn_keep_pick"
            android:layout_marginLeft="4dp"
            android:button="@null"
            android:background="@drawable/lottery_record_btn_selector"
            android:text="充值" />

        <RadioButton
            android:id="@+id/myaccount_tikuan"
            style="@style/btn_keep_pick"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:button="@null"
            android:background="@drawable/lottery_record_btn_selector"
            android:text="提款" />
    </LinearLayout>   
   <FrameLayout
        android:id="@+id/myaccount_pickarea"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/myaccount_toolbar" >
