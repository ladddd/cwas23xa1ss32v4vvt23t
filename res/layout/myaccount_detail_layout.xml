<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/timer_bg">
	<!-- top -->
	<include
			android:id="@+id/myaccount_head_bar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/main_head_bar_height"
			android:layout_alignParentTop="true"
			layout="@layout/pick_title" />
	<!-- middle -->
	<LinearLayout
			android:id="@+id/myaccount_toolbar"
			android:layout_below="@+id/myaccount_head_bar"
			style="@style/bet_tool_bar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal" >

		<RadioButton
				android:id="@+id/myaccount_detail"
				style="@style/btn_keep_pick"
				android:layout_marginLeft="4dp"
				android:background="@drawable/lottery_record_btn_selector"
				android:button="@null"
				android:checked="true"
				android:text="明细"
				android:textSize="16sp"
				android:textColor="@drawable/indicator_text_selector"/>

		<RadioButton
				android:id="@+id/myaccount_chongzhi"
				style="@style/btn_keep_pick"
				android:layout_marginLeft="4dp"
				android:button="@null"
				android:background="@drawable/lottery_record_btn_selector"
				android:text="充值"
				android:textSize="16sp"
				android:textColor="@drawable/indicator_text_selector"/>

		<RadioButton
				android:id="@+id/myaccount_tikuan"
				style="@style/btn_keep_pick"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:button="@null"
				android:background="@drawable/lottery_record_btn_selector"
				android:text="提款"
				android:textSize="16sp"
				android:textColor="@drawable/indicator_text_selector"/>
	</LinearLayout>
	<FrameLayout
			android:id="@+id/myaccount_pickarea"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_below="@+id/myaccount_toolbar" >
	</FrameLayout>

</RelativeLayout>
