<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:progress="http://schemas.android.com/apk/res/com.jincaizi"
                android:layout_gravity="center_horizontal"
                android:layout_width="fill_parent"
                android:layout_height="46dp"
                android:background="@color/k3_orange">

	<RelativeLayout
			android:id="@+id/left_layout"
			android:layout_width="54dp"
			android:layout_height="match_parent">
		<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:contentDescription="@null"
				android:gravity="center"
				android:src="@drawable/return_back"/>
	</RelativeLayout>

	<TextView
			android:id="@+id/current_lottery"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:gravity="center"
			android:textColor="@color/white"
			android:textSize="17sp"
			android:text="快三"/>


	<TextView
			android:id="@+id/sumbit_group_buy"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_alignParentRight="true"
			android:gravity="center_vertical"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:minWidth="55dp"
			android:text="发起合买"
			android:textColor="@color/white"/>

	<com.jincaizi.kuaiwin.chart.views.CircularProgress
			android:id="@+id/progress"
			android:layout_toLeftOf="@+id/current_lottery"
			android:layout_toStartOf="@+id/current_lottery"
			android:layout_centerVertical="true"
			android:layout_marginRight="10dp"
			android:layout_marginEnd="10dp"
			android:layout_width="30dp"
			android:layout_height="30dp"
			progress:borderWidth="4dp"
			android:visibility="gone"/>
</RelativeLayout>



