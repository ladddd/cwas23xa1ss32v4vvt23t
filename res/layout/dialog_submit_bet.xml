<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    
    android:orientation="vertical" >

    <TextView
        android:id="@+id/submit_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_title_bg"
        android:gravity="center"
        android:text="确认投注"
        android:textColor="#ffffffff"
        android:textSize="14.0sp" />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_footer"
         android:orientation="vertical"
        >
        <TextView
            android:id="@+id/submit_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="从12111610期开始购买共1期，1倍，共计6元"
            android:textColor="@color/footer_black"
            android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="2dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/tv_submit_cancel"
            android:layout_width="0dp"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/umeng_update_button_cancel_bg_selector"
            android:textColor="@color/footer_black"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="14.0sp" 
            android:text="取消" />


        <Button
            android:id="@+id/tv_submit_ok"
            android:layout_width="0dp"
            android:layout_height="30.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="确认投注"
            android:background="@drawable/umeng_update_button_ok_bg_selector"
             android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="14.0sp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>