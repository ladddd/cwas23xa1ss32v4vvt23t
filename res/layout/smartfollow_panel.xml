<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#aa000000"
    >

<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6.0dip"
        android:layout_marginLeft="18.0dip"
        android:layout_marginTop="16.0dip"
        android:orientation="horizontal" >

        <View
            android:layout_width="6.0dip"
            android:layout_height="6.0dip"
            android:layout_gravity="center"
            android:background="@drawable/new_circle" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:text="@string/alter_follow_plan"
            android:textColor="#ff807559"
            android:textSize="20.0sp" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_marginTop="8.0dip"
        android:background="#ffe5dfdf" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:text="连续追号:"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />

        <LinearLayout
        android:id="@+id/period_setting_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="true"
        android:gravity="center"
        android:paddingBottom="4.0dip"
        android:paddingTop="4.0dip" >

        <TextView
            android:id="@+id/period_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/smartfollow_sub"
            android:textColor="@color/tc_default" />

        <EditText
            android:id="@+id/period_time_tv"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/sf_input_bg"
            android:ellipsize="middle"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:textColor="@color/tc_default"
            android:textColorHint="#ffcccccc"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/period_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/smartfollow_add"
            android:textColor="@color/tc_default" />
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:text="期"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:text="起始倍数:"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />

        <LinearLayout
        android:id="@+id/times_start_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="true"
        android:gravity="center"
        android:paddingBottom="4.0dip"
        android:paddingTop="4.0dip" >

        <TextView
            android:id="@+id/times_start_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/smartfollow_sub"
            android:textColor="@color/tc_default" />

        <EditText
            android:id="@+id/times_start_tv"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/sf_input_bg"
            android:ellipsize="middle"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:digits="0123456789"
            android:textColor="@color/tc_default"
            android:textColorHint="#ffcccccc"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/times_start_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/smartfollow_add"
            android:textColor="@color/tc_default" />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10.0dip"
            android:text="倍"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:padding="10.0dip"
            android:text="预期盈利:"
            android:textColor="#ff000000"
            android:textSize="18.0sp" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/profit_rate_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:button="@drawable/radio_button"
                    android:checked="false"
                    android:paddingLeft="20.0dip"
                    android:text="全程最低盈利率"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/profit_rate_tv"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:background="@drawable/sf_input_bg"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789."
                    android:textColor="@color/tc_default"
                    android:textColorHint="#ffcccccc"
                    android:enabled="false"
                    android:textSize="15.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/profit_rate_second_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:button="@drawable/radio_button"
                    android:checked="false"
                    android:paddingLeft="20.0dip"
                    android:text="前"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/profit_rate_first_period_tv"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:background="@drawable/sf_input_bg"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:textColor="@color/tc_default"
                    android:textColorHint="#ffcccccc"
                    android:enabled="false"
                    android:textSize="15.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:text="期"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/profit_rate_first_rate_tv"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:background="@drawable/sf_input_bg"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789."
                    android:textColor="@color/tc_default"
                    android:textColorHint="#ffcccccc"
                    android:enabled="false"
                    android:textSize="15.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20.0dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:text="之后盈利率"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/profit_rate_second_rate_tv"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:background="@drawable/sf_input_bg"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789."
                    android:textColor="@color/tc_default"
                    android:textColorHint="#ffcccccc"
                    android:enabled="false"
                    android:textSize="15.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/profit_bonus_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:button="@drawable/radio_button"
                    android:checked="false"
                    android:paddingLeft="20.0dip"
                    android:text="全程最低盈利"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />

                <EditText
                    android:id="@+id/profit_bonus_tv"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4.0dip"
                    android:background="@drawable/sf_input_bg"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:inputType="number"
                    android:digits="0123456789."
                    android:imeOptions="flagNoExtractUi"
                    android:textColor="@color/tc_default"
                    android:textColorHint="#ffcccccc"
                    android:enabled="false"
                    android:textSize="15.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="#ff000000"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ToggleButton
        android:id="@+id/follow_mode"
        android:layout_width="fill_parent"
        android:layout_height="36.0dip"
        android:background="@drawable/transparent"
        android:drawableLeft="@drawable/checkbox_button"
        android:drawablePadding="8.0dip"
        android:gravity="left|center"
        android:paddingLeft="10.0dip"
        android:text="@string/stop_following"
        android:textColor="#ff000000"
        android:textOff="@string/stop_following"
        android:textOn="@string/stop_following"
        android:checked="true"
        android:textSize="16.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginBottom="-1.0dip"
        android:layout_marginTop="16.0dip"
        android:background="@drawable/gray_line" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/btn_toggle_white_bg"
            android:text="取消"
            android:textColor="#ff000000"
            android:textSize="16.0dip" />

        <Button
            android:id="@+id/bt_yes"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/common_footer_btn_bg"
            android:text="生成方案"
            android:textColor="@color/right_footer_text_color"
            android:textSize="16.0dip" />

    </LinearLayout>

</LinearLayout>

</ScrollView>